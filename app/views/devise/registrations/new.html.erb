<div class="registration-new-container">
  <div class="row">
    <div class="d-flex justify-content-around align-items-center">
      <div class="col-8">
        <h2>Registrarse</h2>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
        <%= f.error_notification %>

    <div class="form-inputs w-100">
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" },
                label: "Correo Electronico" %>
    <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} caracteres minimos" if @minimum_password_length),
                input_html: { autocomplete: "new-password" },
                label: "ContraseÃ±a" %>
    <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password" },
                label: "Repetir ContraseÃ±a" %>
    <%= f.input :user_name,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "usuario" },
                  label: "Usuario",
                  hint: "6 caracteres minimo"%>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Registrarse", class: "btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>

</div>
