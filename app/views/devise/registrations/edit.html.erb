<div class="container edit-user-container my-3">
  <div class="row">
    <div class="d-flex justify-content-around align-items-center">

      <div class="col-8">
        <h2>Actualizar <%= resource_name.to_s.humanize %></h2>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs w-75">
        <%= f.input :email, label: "Correo Electronico", required: true, autofocus: true %>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p>Esperando confirmacion: <%= resource.unconfirmed_email %></p>
        <% end %>

    <%= f.input :password,
                hint: "Dejar en blanco si no deseas cambiarlo",
                required: false,
                input_html: { autocomplete: "new-password" },
                label: "Contraseña" %>
    <%= f.input :password_confirmation,
                required: false,
                input_html: { autocomplete: "new-password" },
                label: "Confirmar Contraseña" %>
    <%= f.input :current_password,
                hint: "Necesitamos tu contrasena actual para confirmar los cambios",
                required: true,
                input_html: { autocomplete: "current-password" },
                label: "Repetir Contraseña" %>
    <%= f.input :user_name,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "usuario" },
                label: "Usuario" %>
    <%= f.input :first_name,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "nombre" },
                label: "Nombre" %>
    <%= f.input :last_name,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "apellido" },
                label: "Apellido" %>
    <%= f.input :address,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "direccion" },
                label: "Direccion" %>
     <%= f.input :birth_date,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "fecha de nacimiento" },
                label: "Fecha de Nacimiento" %>
    <%= f.input :photos, label: "Fotos", as: :file %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Actualizar", class: "btn-primary my-3" %>
  </div>
<% end %>

<div class="d-flex align-items-center">
  <div>No estas de acuerdo?</div>
  <%= button_to "Cancelar Cuenta", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-link" %>
</div>
</div>
</div>
<%= link_to "Volver", :back %>
