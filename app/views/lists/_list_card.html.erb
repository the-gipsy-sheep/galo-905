
<div class="flip-card card-category list-card list-group-item d-flex justify-content-between align-items-center py-4 mb-3">
  <div class="flip-card-inner" tab-index="0">
    <div class="flip-card-front" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),  url('https://res.cloudinary.com/djkzewvwv/image/upload/v1666316478/development/card_navide%C3%B1a_vrn06y.jpg')">
      <%= link_to list_path(list) do %>
        <%= '<span class="new-badge badge bg-success small">new</span>'.html_safe if list.created_at >= (Date.today -7)  %>
        <div>
          <h2><%= list.title %></h2>
          <a class="whatsapp-share" href="https://wa.me/?text=Mira mi lista de regalos en Galo: http://localhost:3000<%= list_path(list) %>" target="_blank"><i class="fa-brands fa-square-whatsapp"></i> Compartír </a>
        </div>
        <div class="d-flex flex-column justify-content-between align-items-center">
          <div class="m-1">
            <i class="fa-sharp fa-solid fa-gift"></i>
            <span class="badge bg-primary rounded-pill m-0"><%= list.gifts.count %></span>
          </div>
          <%= link_to "Ver Más", list_path(list), class:"btn btn-primary text-uppercase" %>
        </div>
      <% end %>
    </div>
    <div class="flip-card-back">
      <div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel" data-bs-interval="100">
        <div class="carousel-inner flip-list-card">
              <%# <h2><%= list.title %></h2>
          <% list.gifts.each_with_index do |gift, index| %>
              <% if gift.photo.attached? %>
                <div class="carousel-item <%= 'active' if index.zero? %>">
                  <%= cl_image_tag gift.photo&.key %>
                </div>
              <%end%>
            <%#end%>
          <%end%>
        </div>
      </div>
    </div>
  </div>
</div>
