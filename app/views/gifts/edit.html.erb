<div class="container gift-edit-container my-3">
  <div class="row">
    <div class="d-flex justify-content-around align-items-center">
      <div class="d-flex flex-column justify-content-around" >
          <%= image_tag "cards-edit/regalo9.jpg" %>
      </div>
      <div class="col-6">
        <h2>Edita tu Regalo</h2>
        <%= simple_form_for @gift, html: { class: "d-flex justify-content-between form-gift align-items-center flex-column "} do |f| %>
          <%= f.input :url, label: "Ingresar la Dirección web", wrapper_html: { class: 'form-control form-gift-item' }%>
          <%= f.input :title, label: "Titulo", wrapper_html: { class: 'form-control form-gift-item' } %>
          <%= f.input :description, label: "Descripción", wrapper_html: { class: 'form-control form-gift-item' }  %>
          <%= f.input :status, label: "Estado" %>
          <%= f.input :photo, label: "Foto", as: :file %>
          <%= f.input :ranking, label: "Puntuación" %>
          <%= f.input :price, label: "Precio" %>
          <%= f.button :submit, "Editar Regalo", class: "btn btn-primary my-3"  %>
        <% end %>
      </div>
    </div>
  </div>
</div>
