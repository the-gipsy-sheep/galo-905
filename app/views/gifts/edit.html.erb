<div class="container my-3">
  <div class="row">
    <div class="gift-edit-container my-3">
      <%= simple_form_for @gift do |f| %>
        <div class="row">
          <div class="col-6 px-5" >
            <div class="foto d-flex flex-column align-items-center" data-aos="fade-up" data-aos-duration="3000">
              <%= cl_image_tag @gift.photo.key %>
            </div>

            <div class="info-gral">
              <%= f.input :url, required: true, autofocus: true, input_html: { autocomplete: "url" }, label: "Ingresar la DirecciÃ³n web" %>
              <%= f.input :title, required: true, autofocus: true, input_html: { autocomplete: "titulo" }, label: "Titulo" %>
              <%= f.input :description, required: true, autofocus: true, input_html: { autocomplete: "descripcion" }, label: "Descripcion" %>
              <%= f.input :status, required: true, autofocus: true, input_html: { autocomplete: "status" }, label: "Estado" %>
              <%= f.input :photo, label: "Foto", as: :file %>
              <%= f.input :ranking, required: true, autofocus: true, input_html: { autocomplete: "ranking" }, label: "Puntuacion" %>
              <%= f.input :price, required: true, autofocus: true, input_html: { autocomplete: "precio" }, label: "Precio" %>
            </div>
            <div class="form-actions d-flex flex-column align-items-center justify-content-around">
              <%= f.button :submit, "Editar Regalo", class: "btn-primary text-uppercase" %>
              <%= link_to "Volver", :back %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
