
<%# PARA HACER EL GRID, SE HACE POR ARRIBA DE LA ITERACIÃ“N %>
<div class="cards">
  <% if params[:query].present? %>
    <% @gifts.each do |gift| %>
      <% if gift.searchable.respond_to?(:user_name) %>
        <div class="card">
          <%= gift.searchable.user_name %>
          <%# <%= render "search_user", gift: gift %>
        </div>
      <% else %>
        <%= render "search", gift: gift %>
      <% end %>
    <% end %>
  <% else %>
    <% @gifts.each do |gift| %>
      <%= render "lists/gift_card", gift: gift %>
    <% end %>
  <% end %>
</div>
