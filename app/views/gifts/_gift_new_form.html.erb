  <%= simple_form_for [@list, @gift], html: { class: "d-flex justify-content-between form-gift align-items-center flex-column"} do |f| %>
    <%= f.association :list, label: "Lista", selected: @list.id, include_blank: false, collection: List.where(user_id: current_user),  wrapper_html: { class: 'form-control form-gift-item' }  %>
    <div class="d-flex">
      <%= f.input :url, placeholder:"URL del Producto", label: false, wrapper_html: { class: 'form-control form-gift-item' }  %>
      <%#= f.submit "Buscá URL", class: "btn btn-secondary py-2 my-3" %>
      <%#= link_to "Buscá URL",src: "http://google.com", class: "btn btn-secondary py-2 my-3", data: { turbo_frame: "modal" } %>
      <%#= content_tag(:iframe, width: 300, height: 500, src: "http://google.com") %>
      <button type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#exampleModal">
  Buscar URL
</button>
    </div>
    <%= f.input :title, placeholder:"Titulo", label: false, wrapper_html: { class: 'form-control form-gift-item' } %>
    <%= f.input :description, placeholder:"Descripcion del Regalo", label: false, wrapper_html: { class: 'form-control form-gift-item' }  %>
    <div class="d-flex justify-content-around">
      <%= f.input :price, as: :currency, label: "Precio", wrapper_html: { class: 'form-gift-item px-1' } %>
      <%= f.input :ranking, label: "Deseometro", wrapper_html: { class: 'form-gift-item px-1' }, input_html: { min: '0', max: '5', step: '1' } %>
    </div>
    <%= f.input :photo, label: "Foto del Regalo", as: :file, wrapper_html: { class: 'form-control form-gift-item' }  %>
    <%= f.submit "Agrega tu Regalo", class: "btn btn-primary mt-3" %>
  <% end %>

